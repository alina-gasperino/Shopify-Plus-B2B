<section class="Banner">
    <div class="Banner__Container">
        <div class="Banner__Layout-main">
            <h1 class="Banner__Head">{{section.settings.heading}}</h1>
            <p class="Banner__Content">{{section.settings.content1}}</p>

            {% if section.settings.button_1_text != blank and section.settings.button_1_url != blank %}
              <div class="Banner__Button-wrapper">
                <a class="btn btn--white" href="{{ section.settings.button_1_url }}">{{ section.settings.button_1_text }}</a>

                {% if section.settings.button_2_text != blank and section.settings.button_2_url != blank %}
                  <a class="btn" href="{{ section.settings.button_2_url }}">{{ section.settings.button_2_text }}</a>
                {% endif %}
              </div>
            {% endif %}
        </div>
    </div>
</section>

<style>
.Banner {
    padding: 158px 0 105px;
    background-image: url({{ section.settings.images | img_url:'2048x480' }});
}
</style>
{% schema %}
{
  "name": "Banner",
  "class": "BannerWrap",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "content1",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "images",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Button 1 text"
    },
    {
      "type": "text",
      "id": "button_1_url",
      "label": "Button 1 url"
    },
     {
      "type": "text",
      "id": "button_2_text",
      "label": "Button 2 text"
    },
    {
      "type": "text",
      "id": "button_2_url",
      "label": "Button 2 url"
    }
  ],
  "presets": [
    {
      "name": "Banner",
      "category": "Section"
    }
  ]
}
{% endschema %} 