{% if customer and customer.tags contains "b2b" %}
    <section class="SignIn">
      <div class="SignIn__Container">
        <h2 class="SignIn__Head">Welcome {{ customer.name }}!</h2>
        <div class="price_tiers">
            <b><h4>Quantity Discounts</h4></b>
            <p>1-23 boxes at $18.83</p>
            <p>24-59 boxes at $18.66</p>
            <p>60+ boxes at $18.49</p>
        </div>
        <div class="collection-main__list product__list btb_collection_container">
          {% if customer.tags contains "wholesale" %}
            {% for product in collections['wholesale-b2b-products'].products %}
              {% capture forIndex %}
                {{ forloop.index }}
              {% endcapture %}  
              {% render 'Product-grid_item', product: product, all_prods: all_prods, foreach: forIndex %}
            {% endfor %}
          {% elsif customer.tags contains "ecommerce" %}
            {% for product in collections['ecommerce-b2b-products'].products %}
              {% capture forIndex %}
                {{ forloop.index }}
              {% endcapture %}
              {% render 'Product-grid_item', product: product, all_prods: all_prods, foreach: forIndex %}
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </section>
    <style>
      .btb_collection_container {
        max-width: 1240px;
        margin: 0 auto;
      }
      .price_tiers {
        text-align: center;
        padding-bottom: 20px;
      }
    </style>
  {% endif %}  
  
  {% schema %}
    {
      "name": "B2B Products",
      "tag": "section",
      "settings": [],
      "presets": [
        {
          "name": "B2B Products",
          "category": "Section"
        }
      ]
    }
  {% endschema %}