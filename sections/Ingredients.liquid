<div id="ingredients">
  <div class="ingredients__container">
    <h2 class="ingredients__title heading-stars">{{ section.settings.heading }}</h2>

    <div class="ingredients__content">
      <div class="ingredients__list ingredients__list--first">
        {% for item in product.metafields.huemor.ingredients.value.items limit:2 %}

          <div class="ingredients__list-item">
            <div class="ingredients__list-item-image-title">
              <div class="ingredients__list-item-img-wrapper">
                <img src="{{ item.image }}" loading="lazy" class="ingredients__list-item-img" alt="Ingredient image">
              </div>

              <h3 class="ingredients__list-item-title h4 mobile-only">{{item.title}}</h3>
            </div>
   
            <div class="ingredients__list-item-content">
              <h3 class="ingredients__list-item-title h4 desktop-only">{{item.title}}</h3>

              <p class="ingredients__list-item-copy">{{item.copy}}</p>
            </div>
          </div>

        {% endfor %}
      </div>

      <div class="ingredients__main-image-wrapper">
        <img src="{{ product.metafields.huemor.ingredients.value.main_image }}" class="ingredients__list-main-image" alt="Ingredients main image">
      </div>

      <div class="ingredients__list">
        {% for item in product.metafields.huemor.ingredients.value.items offset:2 %}

          <div class="ingredients__list-item">
            <div class="ingredients__list-item-image-title">
              <div class="ingredients__list-item-img-wrapper">
                <img src="{{ item.image }}" loading="lazy" class="ingredients__list-item-img" alt="Ingredient image">
              </div>

              <h3 class="ingredients__list-item-title h4 mobile-only">{{item.title}}</h3>
            </div>
   
            <div class="ingredients__list-item-content">
              <h3 class="ingredients__list-item-title h4 desktop-only">{{item.title}}</h3>

              <p class="ingredients__list-item-copy">{{item.copy}}</p>
            </div>
          </div>

        {% endfor %}
      </div>
    </div>
  </div>
</div>


{% schema %} 
{ 
  "name": "Ingredients",  
  "tag":"section", 
  "class": "ingredients",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "presets": [ 
    { 
      "name": "Ingredients",
      "category": "Section" 
    } 
  ]
} 
{% endschema %}