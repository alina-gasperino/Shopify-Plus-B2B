<section class="IngredientsGrid">
    <div class="IngredientsGrid__Container">
        <div class="IngredientsGrid__Layout-main">
            {% for block in section.blocks %}
            <div class="IngredientsGrid__Layout-inner">
                <div class="IngredientsGrid__ImageWrap">
                    <img class="IngredientsGrid__Image" src="{{ block.settings.ingredientimage | img_url:'160x160' }}" loading="lazy" alt="Ingredients Image">
                </div>
                <h3 class="IngredientsGrid__Title">{{block.settings.ingredientstitle}}</h3>
                <p class="IngredientsGrid__Details">{{block.settings.ingredientsdetails}}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>



{% schema %} { "name": "Grid", "tag": "section",
"settings": [
    
], 
"blocks": [
{
"type": "block",
"name": "Block",
"settings": 
[
{
    "type": "image_picker",
    "id": "ingredientimage",
    "label": "Image"
  },
	{
      "type": "text",
      "id": "ingredientstitle",
      "label": "Title"
    },
    	{
      "type": "text",
      "id": "ingredientsdetails",
      "label": "Details"
    }
]
}
],

"presets": [ { "name": "Grid", "category": "Section" } ] } {%
endschema %}